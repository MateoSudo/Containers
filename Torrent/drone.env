# Drone Server Configuration
DRONE_GITHUB_CLIENT_ID=your_github_oauth_app_client_id
DRONE_GITHUB_CLIENT_SECRET=your_github_oauth_app_client_secret
DRONE_RPC_SECRET=your_super_secret_shared_secret_here
DRONE_SERVER_HOST=your_domain.com:8082
DRONE_SERVER_PROTO=http

# Database (SQLite by default, or use external DB)
DRONE_DATABASE_DRIVER=sqlite3
DRONE_DATABASE_DATASOURCE=/data/database.sqlite

# User settings
DRONE_USER_CREATE=username:your_github_username,admin:true

# Optional: Logs
DRONE_LOGS_PRETTY=true
DRONE_LOGS_COLOR=true

# Optional: Registration (set to closed for security)
DRONE_REGISTRATION_CLOSED=false

# Optional: Repository settings
DRONE_REPOSITORY_FILTER=your_github_username/*
